                                                    <TextBlock Text="Tác giả" Foreground="#969696" FontSize="18" Margin="70 10 0 0" VerticalAlignment="Center"/>

                                                </StackPanel>
                                            </Button>

                                        </ListViewItem>

                                        <ListViewItem>
