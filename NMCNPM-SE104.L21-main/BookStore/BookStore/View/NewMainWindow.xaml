                                <Style.Triggers>

                                    <Trigger Property="IsFocused" Value="True">
                                        <Setter Property="Foreground" Value="Beige" />
                                        <Setter Property="Background" Value="Olive" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListViewItem.Style>

